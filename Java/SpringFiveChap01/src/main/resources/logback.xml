<configuration>
    <appender name="StdOutConsole" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date~[%thread]~[%-5level]~logger{50}-%message%n</pattern>
        </encoder>
    </appender>
    <logger name="edu.gandhi.prajit.spring" level="DEBUG"></logger>
    <root level="INFO">
        <appender-ref ref="StdOutConsole"></appender-ref>
    </root>
</configuration>